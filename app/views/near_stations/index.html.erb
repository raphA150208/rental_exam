<p id="notice"><%= notice %></p>

<h1>Near Stations</h1>

<table>
  <thead>
    <tr>
      <th>Line</th>
      <th>Station name</th>
      <th>Time on foot</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @near_stations.each do |near_station| %>
      <tr>
        <td><%= near_station.line %></td>
        <td><%= near_station.station_name %></td>
        <td><%= near_station.time_on_foot %></td>
        <td><%= link_to 'Show', near_station %></td>
        <td><%= link_to 'Edit', edit_near_station_path(near_station) %></td>
        <td><%= link_to 'Destroy', near_station, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

